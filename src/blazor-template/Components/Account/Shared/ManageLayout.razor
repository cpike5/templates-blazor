@inherits LayoutComponentBase
@layout AccountLayout

<style>
    .manage-container {
        min-height: 100vh;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding: 2rem 1rem;
        background: linear-gradient(135deg, var(--color-light) 0%, #f8f9fa 100%);
    }

    .manage-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        max-width: 1200px;
        width: 100%;
        border: none;
        margin-top: 2rem;
    }

    .manage-header {
        background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
        color: white;
        padding: 2.5rem 2rem;
        text-align: center;
        border: none;
    }

    .manage-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.9;
    }

    .manage-title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .manage-subtitle {
        opacity: 0.9;
        font-size: 1.1rem;
        margin: 0;
    }

    .manage-content {
        display: flex;
        min-height: 600px;
    }

    .manage-sidebar {
        width: 280px;
        background: #f8f9fa;
        border-right: 1px solid #dee2e6;
        padding: 0;
        flex-shrink: 0;
    }

    .manage-main {
        flex: 1;
        padding: 2.5rem;
        background: white;
    }

    .page-section-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-dark);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .page-section-subtitle {
        color: #6c757d;
        margin-bottom: 2rem;
        font-size: 1rem;
        line-height: 1.5;
    }

    .section-divider {
        border: none;
        border-top: 2px solid #e9ecef;
        margin: 2rem 0;
    }

    /* Status Messages */
    .status-message {
        padding: 1rem 1.25rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        font-weight: 500;
        border: none;
    }

        .status-message.success {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
            border-left: 4px solid var(--color-success);
        }

        .status-message.error {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            color: #721c24;
            border-left: 4px solid var(--color-danger);
        }

        .status-message.info {
            background: linear-gradient(135deg, #d1ecf1, #bee5eb);
            color: #0c5460;
            border-left: 4px solid var(--color-info);
        }

    /* Form Styling */
    .form-section {
        background: white;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .form-section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-dark);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e9ecef;
    }

    .form-floating > .form-control {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 1rem 0.75rem;
        height: 58px;
        transition: all 0.3s ease;
    }

        .form-floating > .form-control:focus {
            border-color: var(--color-primary);
            box-shadow: 0 0 0 0.2rem rgba(var(--color-primary-rgb, 120, 39, 137), 0.25);
        }

        .form-floating > .form-control.is-valid {
            border-color: var(--color-success);
        }

        .form-floating > .form-control.is-invalid {
            border-color: var(--color-danger);
        }

    .form-floating > label {
        padding: 1rem 0.75rem;
        color: #6c757d;
    }

    /* Button Styling */
    .btn-primary {
        background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
        border: none;
        border-radius: 12px;
        padding: 0.875rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(var(--color-primary-rgb, 120, 39, 137), 0.3);
            color: white;
        }

        .btn-primary:disabled {
            transform: none;
            opacity: 0.7;
        }

    .btn-outline-primary {
        border: 2px solid var(--color-primary);
        color: var(--color-primary);
        background: transparent;
        border-radius: 12px;
        padding: 0.875rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background: var(--color-primary);
            border-color: var(--color-primary);
            color: white;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        border-radius: 12px;
        padding: 0.875rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-1px);
            color: white;
        }

    .btn-danger {
        background: linear-gradient(135deg, var(--color-danger), #dc3545);
        border: none;
        border-radius: 12px;
        padding: 0.875rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(234, 49, 6, 0.3);
            color: white;
        }

    /* Info Cards */
    .info-card {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border: 2px solid #dee2e6;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

        .info-card.warning {
            background: linear-gradient(135deg, #fff3cd, #ffeaa7);
            border-color: #ffc107;
            color: #856404;
        }

        .info-card.danger {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            border-color: #dc3545;
            color: #721c24;
        }

        .info-card.success {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            border-color: #28a745;
            color: #155724;
        }

    .info-card-title {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Mobile Responsive */
    @@media (max-width: 992px) {
        .manage-content

    {
        flex-direction: column;
    }

    .manage-sidebar {
        width: 100%;
        border-right: none;
        border-bottom: 1px solid #dee2e6;
    }

    .manage-main {
        padding: 1.5rem;
    }

    }

    @@media (max-width: 768px) {
        .manage-container

    {
        padding: 1rem;
    }

    .manage-header {
        padding: 1.5rem;
    }

    .manage-icon {
        font-size: 2.5rem;
    }

    .manage-title {
        font-size: 1.5rem;
    }

    .manage-subtitle {
        font-size: 1rem;
    }

    .manage-main {
        padding: 1rem;
    }

    .form-section {
        padding: 1.5rem;
    }

    }

    /* Validation Styling */
    .validation-message {
        color: var(--color-danger);
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .validation-message::before {
            content: '\f071';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
        }

    .valid-feedback {
        color: var(--color-success);
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .valid-feedback::before {
            content: '\f00c';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
        }

    /* Loading States */
    .loading-button {
        position: relative;
        overflow: hidden;
    }

        .loading-button::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            animation: loading-shimmer 1.5s infinite;
        }

    @@keyframes loading-shimmer {
        0%

    {
        left: -100%;
    }

    100% {
        left: 100%;
    }

    }
</style>

<div class="manage-container">
    <div class="manage-card">
        <!-- Header -->
        <div class="manage-header">
            <div class="manage-icon">
                <i class="fas fa-user-cog"></i>
            </div>
            <h1 class="manage-title">Account Management</h1>
            <p class="manage-subtitle">Manage your account settings, security preferences, and personal information</p>
        </div>

        <!-- Content -->
        <div class="manage-content">
            <!-- Sidebar Navigation -->
            <div class="manage-sidebar">
                <ManageNavMenu />
            </div>

            <!-- Main Content Area -->
            <div class="manage-main">
                @Body
            </div>
        </div>
    </div>
</div>
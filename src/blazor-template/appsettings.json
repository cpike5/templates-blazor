{
  "ColorScheme": "",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=blazor_template;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Site": {
    "Administration": {
      "AdminEmail": ""
    },
    "Setup": {
      "EnableSetupMode": false,
      "EnableGuestUser": false,
      "GuestUser": {
        "Email": "guest@test.com"
      },
      "InviteOnly": {
        "EnableInviteOnly": true,
        "EnableEmailInvites": false,
        "EnableInviteCodes": true,
        "DefaultCodeExpirationHours": 24,
        "DefaultEmailInviteExpirationHours": 72,
        "MaxActiveCodesPerAdmin": 50
      }
    },
    "FileManagement": {
      "LocalStorage": {
        "RootPath": "App_Data/uploads",
        "OrganizeByDate": true,
        "MaxStorageBytes": 10737418240
      },
      "Security": {
        "MaxFileSizeBytes": 104857600,
        "AllowedMimeTypes": [
          "image/jpeg", "image/png", "image/gif", "image/webp",
          "application/pdf", "text/plain", "application/zip"
        ],
        "AllowedExtensions": [
          ".jpg", ".jpeg", ".png", ".gif", ".webp", 
          ".pdf", ".txt", ".zip"
        ],
        "EnableVirusScanning": false,
        "RequireAuthentication": true
      },
      "Processing": {
        "EnableThumbnailGeneration": false,
        "ThumbnailMaxWidth": 300,
        "ThumbnailMaxHeight": 300,
        "ThumbnailQuality": 85
      },
      "Cache": {
        "EnableFileMetadataCache": true,
        "MetadataCacheExpirationMinutes": 60,
        "EnableThumbnailCache": true
      }
    },
    "Title": "Testing"
  },
  "Navigation": {
    "Items": [
      {
        "Id": "home",
        "Title": "Home",
        "Href": "/",
        "Icon": "fas fa-home",
        "RequiredRoles": [],
        "Order": 10
      },
      {
        "Id": "main-group",
        "Title": "Main",
        "Icon": "fas fa-star",
        "RequiredRoles": [ "User", "Administrator" ],
        "Order": 20,
        "Children": [
          {
            "Id": "link1",
            "Title": "Link 1",
            "Href": "/link1",
            "Icon": "fas fa-chart-line",
            "RequiredRoles": [ "User", "Administrator" ],
            "Order": 10
          },
          {
            "Id": "users",
            "Title": "Users",
            "Href": "/users",
            "Icon": "fas fa-users",
            "RequiredRoles": [ "Administrator" ],
            "Order": 20
          },
          {
            "Id": "admin-dashboard",
            "Title": "Admin Dashboard",
            "Href": "/admin",
            "Icon": "fas fa-tachometer-alt",
            "RequiredRoles": [ "Administrator" ],
            "Order": 15
          },
          {
            "Id": "invites",
            "Title": "Invite Management",
            "Href": "/Admin/Invites",
            "Icon": "fas fa-envelope-open-text",
            "RequiredRoles": [ "Administrator" ],
            "Order": 30
          },
          {
            "Id": "media",
            "Title": "Media Files",
            "Href": "/media",
            "Icon": "fas fa-images",
            "RequiredRoles": [ "User", "Administrator" ],
            "Order": 25
          }
        ]
      },
      {
        "Id": "resources",
        "Title": "Resources",
        "Icon": "fas fa-external-link-alt",
        "RequiredRoles": [],
        "Order": 900,
        "Children": [
          {
            "Id": "github-repo",
            "Title": "GitHub Repository",
            "Href": "https://github.com/cpike5/templates-blazor",
            "Icon": "fab fa-github",
            "RequiredRoles": [],
            "Order": 10,
            "IsExternal": true
          }
        ]
      },
      {
        "Id": "anonymous",
        "Title": "User",
        "Icon": "fas fa-star",
        "Order": 1000,
        "Children": [
          {
            "Id": "login",
            "Title": "Login",
            "Icon": "fas fa-sign-in-alt",
            "Href": "/Account/Login",
            "RequiredRoles": [ "Anonymous" ],
            "Order": 10
          },
          {
            "Id": "register",
            "Title": "Register",
            "Icon": "fa fa-user-plus",
            "Href": "/Account/Register",
            "RequiredRoles": [ "Anonymous" ],
            "Order": 20
          }
        ]
      }
    ]
  },
  "SystemMonitoring": {
    "CollectionIntervalMinutes": 5,
    "MetricRetentionDays": 30
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
